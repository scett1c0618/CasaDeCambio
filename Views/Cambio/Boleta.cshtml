@model CasaDeCambio.Models.Boleta

@{
    ViewData["Title"] = "Boleta de Cambio";
}

<div class="container">
    <h2 class="mb-4">Boleta de Cambio</h2>
    <p><strong>Nombre:</strong> @Model.Nombre</p>
    <p><strong>Documento:</strong> @Model.Documento</p>
    <p><strong>Email:</strong> @Model.Email</p>
    <p><strong>Monto Cambiado:</strong> @Model.Monto @Model.Moneda</p>

    <a href="/" class="btn btn-secondary mt-3">Volver al inicio</a>
</div>
